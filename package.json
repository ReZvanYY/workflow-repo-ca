    "lint-staged": "^16.2.4",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.12",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
